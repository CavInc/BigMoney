<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:paddingTop="8dp"
              android:paddingRight="16dp"
              android:paddingLeft="16dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Spinner
        android:id="@+id/pref_valute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"></Spinner>
    <Spinner
        android:id="@+id/pref_bank"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>
    <EditText
        android:id="@+id/pref_shett"
        android:hint="Счет"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/pref_add_sheet"
        android:text="Добавить счет"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Добавленные счета"
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:background="@color/app_gray_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ExpandableListView
        android:id="@+id/pref_elv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ExpandableListView>

</LinearLayout>